void install(string base)
{
    string target;

    g_installing = 1;

#ifdef BINARY
    target = base + BINARY;
    printf("  installing the executable `", target + PROGRAM "'\n");
    logFile("tmp/bin", "binary", target, PROGRAM);
#endif

#ifdef MAN
    target = base + MAN;
    printf("  installing the manual pages below `", target, "'\n");
    
    logZip("tmp/man", PROGRAM ".1", target);
#endif

#ifdef STD
    target = base + STD;
    printf("  installing the changelog at `", target, "\n");
    logZip("", "changelog", target);

    printf("  installing the html-manual pages at `", target, "\n");
    logInstall("tmp/manhtml", "", target);
#endif

//    if (what == "std")
//    {
//        where = setWhere(where, STD);
//
//        printf("  INSTALLING the changelog at `", where, "\n");
//        run("gzip -n -9 < changelog > " + where + "/changelog.gz");
//    
//        printf("  INSTALLING the html-manual page at `", where, "\n");
//        run("cp tmp/manhtml/" PROGRAM "man.html " + where);
//        exit(0);
//    }
//
//    exit(0);

    writeLog();
}




